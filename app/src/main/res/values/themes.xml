<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YourFish" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="menu">@menu/bottom_nav</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="android:background">?android:attr/windowBackground</item>
    </style>
</resources>